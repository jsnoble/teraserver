{
  "settings": {
    "index.number_of_shards": 5,
    "index.number_of_replicas": 1,
    "analysis": {
      "analyzer": {
        "lowercase_keyword_analyzer": {
          "tokenizer": "keyword",
          "filter": "lowercase"
        }
      }
    }
  },
  "mappings": {
    "user": {
      "_all": {
        "enabled": false
      },
      "dynamic": false,
      "properties": {
        "client_id": {
          "type": "integer"
        },
        "firstname": {
          "type": "text",
          "analyzer": "lowercase_keyword_analyzer"
        },
        "lastname": {
          "type": "text",
          "analyzer": "lowercase_keyword_analyzer"
        },
        "username": {
          "type": "text",
          "analyzer": "lowercase_keyword_analyzer"
        },
        "email": {
          "type": "text",
          "analyzer": "lowercase_keyword_analyzer"
        },
        "role": {
          "type": "keyword"
        },
        "api_token": {
          "type": "keyword"
        },
        "hash": {
          "type": "keyword"
        },
        "salt": {
          "type": "keyword"
        },
        "created": {
          "type": "date"
        },
        "updated": {
          "type": "date"
        },
        "id": {
          "type": "keyword"
        }
      }
    }
  }
}
